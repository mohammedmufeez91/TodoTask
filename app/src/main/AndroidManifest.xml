<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mufeez.taskzero">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/todo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/todo"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">
        <activity
            android:screenOrientation="portrait"
            android:name="com.mufeez.taskzero.RedirectActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.mufeez.taskzero.GLoginActivity"/>
        <activity android:name="com.mufeez.taskzero.activity.main.MainActivity"/>
        <activity android:name="com.mufeez.taskzero.activity.newtask.NewTaskActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>